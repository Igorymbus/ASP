@model Kovukov.Models.LoginModel

<form asp-antiforgery="true" asp-action="SignIn" asp-controller="Home" autocomplete="off" class="row" style="margin-bottom: 5px;">
    <fieldset>
        <div class="form-group col-10">
            <label for="login" class="form-label mt-4">Логин</label>
            <input asp-for="@Model.email" type="text" minlength="2" maxlength="50" autofocus=""
                   class="form-control" id="login" required placeholder="Введите логин">
            <small id="emailHelp" class="form-text text-muted">Никому не сообщайте данные от аккаунта!</small>
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="form-group col-10">
            <label for="exampleInputPassword1" class="form-label mt-4">Пароль</label>
            <input asp-for="@Model.passwords" type="password" class="form-control" id="exampleInputPassword1" required placeholder="Введите пароль">
            <span asp-validation-for="passwords" class="text-danger"></span>
        </div>
        <div class="form-group col-10">
            <button type="submit" class="btn btn-outline-info" style="outline: none; box-shadow: none; width: auto; height: auto;">Войти</button>
        </div>
    </fieldset>
</form>

